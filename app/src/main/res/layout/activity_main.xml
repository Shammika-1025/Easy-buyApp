<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="428dp"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="237dp"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:text="Are You a Buyer??"
            android:textColor="@android:color/background_light"
            android:textColorHint="@android:color/background_light"
            android:textSize="34sp"
            app:met_baseColor="@android:color/background_light"
            app:met_floatingLabel="highlight"
            app:met_maxCharacters="11"
            app:met_primaryColor="@android:color/background_light"
            app:met_singleLineEllipsis="true" />

        <Button
            android:id="@+id/btnBuyer"
            android:layout_width="189dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:background="@android:color/holo_red_dark"
            android:text="Click Here" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/logo" />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="237dp"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:text="Are You a Seller??"
            android:textColor="@android:color/background_light"
            android:textColorHint="@android:color/background_light"
            android:textSize="34sp"
            app:met_baseColor="@android:color/background_light"
            app:met_floatingLabel="highlight"
            app:met_maxCharacters="11"
            app:met_primaryColor="@android:color/background_light"
            app:met_singleLineEllipsis="true" />

        <Button
            android:id="@+id/btnSeller"
            android:layout_width="189dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:background="@android:color/holo_red_dark"
            android:text="Click Here" />


    </LinearLayout>




</RelativeLayout>